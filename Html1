<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Chatbox</title>
    <style>
      /* Style untuk chatbox */
      .chat-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .chat-box {
        width: 300px;
        background-color: #f2f2f2;
        border: 1px solid #ccc;
        padding: 10px;
      }

      .chat-messages {
        max-height: 200px;
        overflow-y: auto;
        margin-bottom: 10px;
      }

      /* Style untuk tombol kirim */
      button {
        padding: 5px 10px;
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
      }

      button:hover {
        background-color: #45a049;
      }
    </style>
  </head>
  <body>
    <!-- Chatbox -->
    <div class="chat-container">
      <div class="chat-box" id="kotakObrolan">
        <div class="pesan-obrolan" id="pesanObrolan"></div>
        <input
          onchange="kirimPesan()"
          type="text"
          id="inputPesan"
          placeholder="Tulis pesan..."
        />
        <button>Kirim</button>
      </div>
    </div>

    <script>
      function kirimPesan() {
        let inputPesan = document.getElementById("inputPesan");
        let pesanObrolan = document.getElementById("pesanObrolan");

        let teksPesan = inputPesan.value;

        if (teksPesan.trim() !== "") {
          let pesanBaru = document.createElement("div");
          pesanBaru.textContent = teksPesan;
          pesanBaru.classList.add("pesan");

          pesanObrolan.appendChild(pesanBaru);
          pesanObrolan.scrollTop = pesanObrolan.scrollHeight; // Auto-scroll ke pesan terbaru

          inputPesan.value = ""; // Reset input setelah pesan dikirim
        }
      }
    </script>
  </body>
</html>
